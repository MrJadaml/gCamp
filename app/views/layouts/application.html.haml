%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    -# %link{:href => "../../favicon.ico", :rel => "icon"}/
    %title gCamp
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        %ul.nav.navbar-nav.navbar-right
          -if current_user
            %li= link_to current_user.email, current_user
            %li= link_to "Sign Out", signout_path
          -else
            %li= link_to "Sign Up", signup_path
            %li= link_to "Sign In", signin_path
        .navbar-brand= link_to "gCamp", root_path
    %br
    -if notice.nil?
      %p
    -else
      %p.alert.text-center.alert-success#notice= notice
    = yield

    %br/
    %br/
    %footer
      .container.foot
        %p.text-muted
          %li= link_to_unless_current( "About", about_path)
          |
          %li= link_to_unless_current( "Terms", terms_path)
          |
          %li= link_to_unless_current( "FAQs", faq_path)
          |
          %li= link_to_unless_current( "Tasks", tasks_path)
