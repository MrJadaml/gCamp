.container
  .well.col-md-4.col-md-offset-4
    %h2.text-center Sign into gCamp
    - if @sign_in_error
      .alert.alert-danger
        .text-center= @sign_in_error
    = form_tag signin_path do |f|
      .form-group
        = label_tag :email
        = email_field_tag :email, '', { class: 'form-control', 'placeholder' => 'joe@example.com' }

      .form-group
        = label_tag :password
        = password_field_tag :password, '', { class: 'form-control' }

      .actions.form-group
        = submit_tag 'Sign in', class: "btn btn-primary"
