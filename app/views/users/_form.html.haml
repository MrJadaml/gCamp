= form_for @user, html: {class: 'form-horizontal'} do |f|
  = render 'shared/errors', instance: @user
  .field.form-group.col-md-offset-2
    = f.label :first_name, class: "col-md-2 col-md-offset-1"
    = f.text_field :first_name, class: "col-md-3"

  .field.form-group.col-md-offset-2
    = f.label :last_name, class: "col-md-2 col-md-offset-1"
    = f.text_field :last_name, class: "col-md-3"

  .field.form-group.col-md-offset-2
    =f.label :email, class: "col-md-2 col-md-offset-1"
    =f.email_field :email, class: "col-md-3"

  .field.form-group.col-md-offset-2
    =f.label :password, class: "col-md-2 col-md-offset-1"
    =f.password_field :password, class: "col-md-3"

  .field.form-group.col-md-offset-2
    =f.label :password_confirmation, class: "col-md-2 col-md-offset-1"
    =f.password_field :password_confirmation, class: "col-md-3"

  .actions.form-group
    = f.submit class: "btn btn-primary col-md-offset-3"
