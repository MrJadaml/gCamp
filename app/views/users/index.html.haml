.container
  %h1.col-md-11 Users
  .col-md-1
    = link_to 'Create User', new_user_path, class: 'btn btn-info'
  %table.table
    %thead
      %tr
        %th.col-md-1
          =link_to "Name", '#'
        %th.col-md-5
          =link_to "Email", '#'
  %tbody
  - @users.each do |user|
    .col-md-12.panel
    %tr
      %td
        .col-md-2= user.full_name
      %td
        .col-md-9= user.email
      %td
        .col-md-1
          = link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
%br/
