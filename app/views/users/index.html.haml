.container
  %div
    .pull-right
      = link_to 'Create User', new_user_path, class: 'btn btn-primary'
    %h1 Users
  %table.table
    %thead
      %tr
        %th.col-md-1
          = link_to 'Name', '#'
        %th.col-md-5
          = link_to 'Email', '#'
  %tbody
  - @users.each do |user|
    .col-md-12.panel
    %tr
      %td
        .col-md-2= link_to user.full_name, user_path(user)
      %td
        .col-md-9= mail_to user.email
      %td
        .pull-right
          = link_to 'Edit', edit_user_path(user), class: 'btn btn-warning'
