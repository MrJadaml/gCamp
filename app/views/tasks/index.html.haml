.container
  .page-header
    .btn.btn-info.pull-right= link_to 'Create Task', new_task_path
    %h1 Tasks
  %table.table
    %thead
      %tr
        %th Description
        %th{:colspan => "3"}
  %tbody
  - @tasks.each do |task|
    .col-md-12.panel
      = task.description
      .pull-right
        .btn.btn-primary= link_to 'Show', task
        .btn.btn-warning= link_to 'Edit', edit_task_path(task)
        .btn.btn-danger= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
%br/
