.container
  %div.page-header
    %div.btn.btn-info.pull-right= link_to 'Create Task', new_task_path
    %div
      %h1 Tasks
  %table.table
    %thead
      %tr
        %th Description
        %th{:colspan => "3"}
    %tbody
      - @tasks.each do |task|
        %tr
          %td= task.description
          %td= link_to 'Show', task
          %td= link_to 'Edit', edit_task_path(task)
          %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
