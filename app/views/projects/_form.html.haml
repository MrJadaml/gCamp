= form_for(@project, html: {class: 'form-horizontal'}) do |f|
  - if @project.errors.any?
    .alert.alert-danger.col-md-offset-1
      - @project.errors.full_messages.each do |msg|
        .text-center.no-decoration= msg
  .field.form-group
    = f.label :name, class: "col-md-1"
    = f.text_field :name, class: "col-md-4"

  .actions.form-group
    = f.submit class: "btn btn-primary col-md-offset-1"
