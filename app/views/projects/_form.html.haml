= form_for(@project, html: {class: 'form-horizontal'}) do |f|
  = render 'shared/errors', instance: @project
  .form-group.row
    .col-md-1
      = f.label :name
    .col-md-4.row
      = f.text_field :name, class: "form-control"

  .form-group
    .col-md-offset-1
      = f.submit class: "btn btn-primary"
