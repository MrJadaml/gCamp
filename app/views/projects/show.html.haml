= render 'shared/success'
%ul.breadcrumb
  %li= link_to 'Projects', projects_path
  %li= @project.name

%div.table
  .pull-right
    = link_to 'Edit', edit_project_path, class: 'btn btn-primary'
    = link_to 'Destroy', project_path, method: :delete, class: 'btn btn-danger'
  %h3= @project.name
%div
  %p
    = link_to "#{@project.tasks.count} Tasks", project_tasks_path(@project)
  %p
    = link_to "#{@project.memberships.count} Members", project_memberships_path(@project)
